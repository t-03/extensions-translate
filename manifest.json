{
  "manifest_version": 2,

  "name": "Test Extension",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0", 
  "permissions": [
    "contentSettings"
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
      "scripts": ["background.js"],
      "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["./js/transLog.js"]
    }
  ] 
}